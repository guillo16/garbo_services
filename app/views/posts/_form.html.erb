<div class="bg-white border-rounded p-5 container">
  <%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :content, input_html: { rows: 7 } %>
  <%= f.input :photo, as: :file %>
  <div class="pt-4">
    <%= f.submit class: "btn btn-primary btn-block" %>
  </div>
  <% end %>
</div>
