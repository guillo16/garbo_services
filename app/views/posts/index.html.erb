<% if user_signed_in? %>
<div class="mt-6 p-5">
  <%= link_to 'Crear novedades', new_post_path, class: "btn btn-primary btn-block"  %>
</div>
<% end %>
<h2 class="py-5 text-center mt-6" id="page-title">Novedades</h2>
<div class="container post-container">
  <% @posts.each do |post| %>
  <%= render 'shared/cards', post: post %>
  <% end %>
</div>
<div class="pt-5 d-flex justify-content-center align-items-center">
  <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

