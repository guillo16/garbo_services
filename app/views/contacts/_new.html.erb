<h2 class="py-5 py-md-6 text-center" id="page-title">Contacto</h2>
<div class="container">
  <div class="forms">
    <%= simple_form_for @contact, remote: true do |f| %>
    <div class="row">
      <div class="col-12 col-md-6">
        <p>Nombre</p>
        <%= f.input :name, input_html: { class: "form-control"}, label: false %>
      </div>
      <div class="col-12 col-md-6">
        <p>Apellido</p>
        <%= f.input :last_name, input_html: { class: "form-control"}, label: false %>
      </div>
    </div>
    <p>Telefono</p>
    <%= f.input :phone, as: :numeric, input_html: { class: "form-control"}, label: false %>
    <p>Email</p>
    <%= f.input :email, input_html: { class: "form-control"}, label: false %>
    <p>Mensaje</p>
    <%= f.input :message, :as => :text, input_html: { class: "form-control form-control", id:"exampleFormControlTextarea1", rows:"7" }, label: false %>
    <div class="d-none">
      <%= f.input :nickname %>
    </div>
    <%= f.submit 'Enviar mensaje', class: 'btn btn-success btn-block btn-main m-0 text-white mt-3' %>
    <% end %>
  </div>
  <div class="text-center">
    <div class="pb-3">
      <i class="far fa-envelope h3"></i>
      <p class="mb-1 pb-1">garbosvsintegrales@gmail.com</p>
    </div>
    <div>
      <i class="fab fa-whatsapp h2"></i>
      <p class="mb-1" type="button" data-toggle="modal" data-target="#phoneModal"> 381-5342477 || 381-5056132</p>
    </div>
  </div>
</div>


